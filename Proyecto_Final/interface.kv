<Non_linear_equations_search>
    name:"Non_linear_equations_search"
    functions:functions
    initial_position:initial_position
    increment:increment
    iterations:iterations
    sol:sol
    GridLayout:
        size:root.width,root.height
        spacing: '10dp'
        padding:30,20
        cols:1
        canvas.before:
            Color:
                rgba: hex(color_background)
            Rectangle:
                pos: self.pos
                size: self.size
        GridLayout:
            cols: 2
            row_default_height:30
            row_force_default:True
            Label:
                text: "Function f(x)"
                font_size:"25sp"
                color: 1,1,1,1 
                bold: True
            TextInput:
                id:functions
                text:root.manager.function_global
                multiline:False
                allow_copy: True
        GridLayout:
            cols: 6
            row_default_height:30
            row_force_default:True
            Label:
                text: "Initial position"
                font_size:"15sp"
                color: 1,1,1,1 
                bold: True
            TextInput:
                id:initial_position
                multiline:False
            Label:
                text: "increment"
                font_size:"15sp"
                color: 1,1,1,1 
                bold: True
            TextInput:
                id:increment
                multiline:False
            Label:
                text: "iterations"
                font_size:"15sp"
                color: 1,1,1,1 
                bold: True
            TextInput:
                id:iterations
                multiline:False
        GridLayout:
            cols: 2
            row_default_height:30
            row_force_default:True
            Label:
                text: "Solution"
                font_size:"20sp"
                color: 1,1,1,1 
                bold: True
            TextInput:
                id:sol
                multiline:False
        SmoothButton:
            text: "Find"
            font_size:"17sp"  
            on_press:root.run()
            
        SmoothButton:
            text: "Graph"
            font_size:"17sp"  
            on_press:root.graphic()
        SmoothButton:
            text: "Help"
            font_size:"17sp"  
            on_press:root.aid()
        SmoothButton:
            text: "Back"
            font_size:"17sp"  
            on_press:
                root.manager.function_global=root.functions.text
                app.root.current="Non_linear_equations"  
                root.manager.transition.direction="right"

<Non_linear_equations_bisection>
    name:"Non_linear_equations_bisection"
    functions:functions
    xi:xi
    xs:xs
    iterations:iterations
    tolerance:tolerance
    sol:sol
    GridLayout:
        size:root.width,root.height
        spacing: '10dp'
        padding:30,20
        cols:1
        canvas.before:
            Color:
                rgba: hex(color_background)
            Rectangle:
                pos: self.pos
                size: self.size
        GridLayout:
            cols: 3
            row_default_height:30
            row_force_default:True
            Label:
                text: "Function f(x)"
                font_size:"25sp"
                color: 1,1,1,1
                bold: True
            TextInput:
                id:functions
                text:root.manager.function_global
                multiline:False
            
                    
        GridLayout:
            cols: 8
            row_default_height:30
            row_force_default:True
            Label:
                text: "Xi"
                font_size:"15sp"
                color: 1,1,1,1
                bold: True
            TextInput:
                id:xi
                multiline:False
            Label:
                text: "Xs"
                font_size:"15sp"
                color: 1,1,1,1
                bold: True
            TextInput:
                id:xs
                multiline:False
            Label:
                text: "iterations"
                font_size:"15sp"
                color: 1,1,1,1
                bold: True
            TextInput:
                id:iterations
                multiline:False
            Label:
                text: "tolerance"
                font_size:"15sp"
                color: 1,1,1,1
                bold: True
            TextInput:
                id:tolerance
                multiline:False
        GridLayout:
            spacing: '10dp'
            cols: 4
            row_default_height:30
            row_force_default:True
            Label:
                size_hint_x:0.4
                text: "Solution"
                width:10
                font_size:"20sp"
                color: 1,1,1,1
                bold: True
            TextInput:
                size_hint_x:1
                id:sol
                multiline:False
            Label:
                size_hint_x:0.2
                text: ""
                bold: True
            GridLayout:
                spacing: '2dp'
                cols: 2
                row_default_height:30
                row_force_default:True
                Label:
                    size_hint_x:0.9
                    text: "Absolute Error"
                    color: 1,1,1,1
                    bold: True
                CheckBox:
                    group: "tipo_de_error"
                    color:  0,0,0,1 
                    active:True
                    on_active: root.tipo_de_error(True)
                Label:
                    size_hint_x:0.8
                    text: "Relative Error"
                    color: 1,1,1,1
                    bold: True
                CheckBox:
                    group: "tipo_de_error"
                    color:  0,0,0,1 
                    on_active: root.tipo_de_error(False)
        SmoothButton:
            text: "Run"
            font_size:"17sp"  
            on_press:root.run()    
        SmoothButton:
            text: "Graph"
            font_size:"17sp"  
            on_press:root.graphic()
        SmoothButton:
            text: "Help"
            font_size:"17sp"  
            on_press:root.aid()
        SmoothButton:
            text: "Back"
            font_size:"17sp"  
            on_press:
                root.manager.function_global=root.functions.text
                app.root.current="Non_linear_equations"  
                root.manager.transition.direction="right"

