<Menu_Initial>
    name: "Menu_Initial"
    GridLayout:
        size:root.width,root.height
        spacing: '10dp'
        padding:30,20
        cols:1
        canvas.before:
            Color:
                rgba: hex(color_background)
            Rectangle:
                pos: self.pos
                size: self.size
        Label:
            text: "Chapters"
            bold: True
            font_size:"30sp"
            color: 1,1,1,1

        SmoothButton:
            text: "Non-linear equations"
            font_size:"17sp"
            on_press:
                app.root.current="Non_linear_equations"
                root.manager.transition.direction="left"
        SmoothButton:
            text: "Equations systems"
            font_size:"17sp"
            on_press:
                app.root.current="System_of_equations"
                root.manager.transition.direction="left"

        SmoothButton:
            text: "Interpolation"
            font_size:"17sp"  
            on_press:
                app.root.current="Interpolation"
                root.manager.transition.direction="left"     

        SmoothButton:
            text: "Differentiation and Numeric integration"
            font_size:"17sp"  
