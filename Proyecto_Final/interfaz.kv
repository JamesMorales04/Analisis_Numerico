<Ecuaciones_no_lineales_busqueda>
    name:"Ecuaciones_no_lineales_busqueda"
    funciones:funciones
    initial_position:initial_position
    increment:increment
    iterations:iterations
    sol:sol
    GridLayout:
        size:root.width,root.height
        spacing: '10dp'
        padding:30,20
        cols:1
        canvas.before:
            Color:
                rgba: hex(color_background)
            Rectangle:
                pos: self.pos
                size: self.size
        GridLayout:
            cols: 2
            row_default_height:30
            row_force_default:True
            Label:
                text: "Function f(x)"
                font_size:"25sp"
                color: 1,1,1,1 
                bold: True
            TextInput:
                id:funciones
                text:root.manager.funcion_global
                multiline:False
                allow_copy: True
        GridLayout:
            cols: 6
            row_default_height:30
            row_force_default:True
            Label:
                text: "Initial position"
                font_size:"15sp"
                color: 1,1,1,1 
                bold: True
            TextInput:
                id:initial_position
                multiline:False
            Label:
                text: "increment"
                font_size:"15sp"
                color: 1,1,1,1 
                bold: True
            TextInput:
                id:increment
                multiline:False
            Label:
                text: "iterations"
                font_size:"15sp"
                color: 1,1,1,1 
                bold: True
            TextInput:
                id:iterations
                multiline:False
        GridLayout:
            cols: 2
            row_default_height:30
            row_force_default:True
            Label:
                text: "Solution"
                font_size:"20sp"
                color: 1,1,1,1 
                bold: True
            TextInput:
                id:sol
                multiline:False
        SmoothButton:
            text: "Find"
            font_size:"17sp"  
            on_press:root.buscar()
            
        SmoothButton:
            text: "Graph"
            font_size:"17sp"  
            on_press:root.graficar()
        SmoothButton:
            text: "Help"
            font_size:"17sp"  
            on_press:root.ayuda()
        SmoothButton:
            text: "Back"
            font_size:"17sp"  
            on_press:
                root.manager.funcion_global=root.funciones.text
                app.root.current="Ecuaciones_no_lineales"  
                root.manager.transition.direction="right"

