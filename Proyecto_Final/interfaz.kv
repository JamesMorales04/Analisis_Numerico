<Menu_Inicial>
    name: "Menu_Inicial"
    GridLayout:
        size:root.width,root.height
        spacing: '10dp'
        padding:30,20
        cols:1
        canvas.before:
            Color:
                rgba: hex(color_background)
            Rectangle:
                pos: self.pos
                size: self.size
        Label:
            text: "Capitulos"
            font_size:"30sp"
            color: 1,1,1,1 


        Button:
            background_color: hex(color_button)
            text: "Ecuaciones no lineales"
            font_size:"17sp"   
            on_press:
                app.root.current="Ecuaciones_no_lineales"     
                root.manager.transition.direction="left"
        Button:
            background_color: hex(color_button)
            text: "Sistemas de ecuaciones"
            font_size:"17sp"  
            on_press:
                app.root.current="Sistemas_de_ecuaciones"     
                root.manager.transition.direction="left"

        Button:
            background_color: hex(color_button)
            text: "Interpolacion"
            font_size:"17sp"  
            on_press:
                app.root.current="Interpolacion"
                root.manager.transition.direction="left"     

        Button:
            background_color: hex(color_button)
            text: "Diferenciacion e Integracion Numerica"
            font_size:"17sp"  
            on_press:
                app.root.current="Diferenciacion_numerica"
                root.manager.transition.direction="left"


